<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/levenderNhat"
    tools:context=".ui.note.CropFragment">


    <!-- TextView at the top -->
    <TextView
        android:id="@+id/textViewData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Danh sÃ¡ch"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <!-- ScrollView to contain the LinearLayout -->
    <ScrollView
        android:id="@+id/plant_list_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="List Plant">

        <!-- LinearLayout inside ScrollView -->
        <LinearLayout
            android:id="@+id/Caytrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"/>
    </ScrollView>
</LinearLayout>
