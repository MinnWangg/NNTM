<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">  <!-- Thêm màu nền trắng cho popup -->

    <!-- Tên cây -->
    <TextView
        android:id="@+id/plant_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên cây"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/plant_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:focusable="false"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Ngày trồng -->
    <TextView
        android:id="@+id/planting_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày trồng"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/planting_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày trồng"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>  <!-- Thêm padding cho EditText -->

    <!-- Ngày thu hoạch -->
    <TextView
        android:id="@+id/harvest_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày thu hoạch"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/harvest_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày thu hoạch"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Ngày bón phân -->
    <TextView
        android:id="@+id/fertilization_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày bón phân"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/fertilization_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày bón phân"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Ngày phun thuốc -->
    <TextView
        android:id="@+id/pesticide_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày phun thuốc"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/pesticide_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày phun thuốc"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Điều kiện tưới -->
    <TextView
        android:id="@+id/watering_condition_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điều kiện tưới"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/wateringCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập điều kiện tưới"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Điều kiện dừng tưới -->
    <TextView
        android:id="@+id/stop_watering_condition_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điều kiện dừng tưới"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/stopWateringCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập điều kiện dừng tưới"
        android:textSize="18sp"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- Nút hủy và lưu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
